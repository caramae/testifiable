- model_class = Experiment
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped

  %thead
    %tr
      %th= 'Experiment'
      %th= 'Units'
      %th= 'Action'
  %tbody
    - @experiments.each do |experiment|
      %tr
        %td= link_to 'What is the impact of ' + experiment.action + ' on ' + experiment.outcome, experiment_path(experiment), :class=>'no-back-hover no-click-change'
        %td= "Measured in " + experiment.unit
        %td
          =link_to "Testify", root_path, :class=>"btn btn-mini"
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_experiment_path(experiment), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), experiment_path(experiment), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_experiment_path, :class => 'btn btn-primary'