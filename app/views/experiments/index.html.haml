- model_class = Experiment
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped

  %thead
    %tr
      %th= 'Experiment'
      %th= 'Units'
      %th= 'Action'
  %tbody
    - @experiments.each do |experiment|
      %tr
        %td= link_to 'What is the impact of ' + experiment.action + ' on ' + experiment.outcome+'?', experiment_path(experiment), :class=>'no-back-hover no-click-change'
        %td= "Measured in " + experiment.unit
        %td
          -if @current_user
            -if experiment.is_enrolled(@current_user.id)
              =link_to "Enrolled", root_path, :class=>"btn btn-mini", :disabled=>'disabled'
            -else
              =link_to "Testify", {:action=>'enroll', :id=>experiment.id}, :method=>:post, :class=>"btn btn-mini"
          -else
            =link_to "Testify", root_path, :class=>"btn btn-mini", :disabled=>"disabled"
            .muted="Login to testify!"

= link_to t('.new', :default => t("helpers.links.new")), new_experiment_path, :class => 'btn btn-primary'