- model_class = Datapoint
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:experiment_id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:value)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @datapoints.each do |datapoint|
      %tr
        %td= link_to datapoint.id, datapoint_path(datapoint)
        %td= datapoint.experiment_id
        %td= datapoint.user_id
        %td= datapoint.value
        %td=l datapoint.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_datapoint_path(datapoint), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), datapoint_path(datapoint), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_datapoint_path, :class => 'btn btn-primary'
